@model LoginViewModel
<div class="login">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui teal image header">
        <div class="content">
          Login
        </div>
      </h2>
      <form class="ui large form"  asp-controller="Login" asp-action="Index" method="POST">
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <input type="text" name="username" required placeholder="Username">
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <input type="password" name="password" required placeholder="Password">
            </div>
          </div>
          <button class="ui positive basic button" type="submit">Login</button>
        </div>
        @if(ViewBag.Message != null) {
        <div asp-validation-summary="All" class="ui visible error message"></div>
        }
      </form>
    </div>
  </div>
</div>

